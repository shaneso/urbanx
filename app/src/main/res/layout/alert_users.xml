<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:cardBackgroundColor="@color/grey"/>

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardElevation="16dp"
        android:layout_margin="16dp"
        android:id="@+id/alert_card_image_holder"
        app:cardCornerRadius="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/alert_image"
            android:src="@drawable/ic_default_user"/>

    </androidx.cardview.widget.CardView>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/alert_card_image_holder"
        android:layout_alignTop="@id/alert_card_image_holder"
        android:textSize="19sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:id="@+id/alert_username"
        android:text="Shane"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"/>

    <TextView
        android:layout_width="190dp"
        android:layout_height="26dp"
        android:layout_toRightOf="@id/alert_card_image_holder"
        android:layout_below="@id/alert_username"
        android:textSize="18sp"
        android:maxLines="1"
        android:id="@+id/alert_glimpse"
        android:layout_marginLeft="3dp"
        android:text="wants to be your friend"
        android:textColor="#6A6767"
        android:fontFamily="@font/roboto"/>

    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardElevation="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@id/alert_card_image_holder"
        android:layout_toRightOf="@id/alert_glimpse"
        android:id="@+id/alert_yes_holder"
        app:cardCornerRadius="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/alert_yes"
            android:src="@drawable/ic_green_check"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardElevation="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@id/alert_card_image_holder"
        android:layout_toRightOf="@id/alert_yes_holder"
        android:id="@+id/alert_no_holder"
        app:cardCornerRadius="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/alert_no"
            android:src="@drawable/ic_red_x"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/alert_card_image_holder"
        app:cardBackgroundColor="@color/grey"/>


</RelativeLayout>
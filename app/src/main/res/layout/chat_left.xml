<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/messages_profile_holder"
        app:cardCornerRadius="25dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/messages_profile"
            android:src="@drawable/ic_default_user"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/messages_profile_holder"
        android:layout_marginLeft="5dp"
        android:padding="8dp"
        android:text="hello"
        android:id="@+id/messages_message"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:background="@drawable/messages_left"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/messages_profile_holder"
        android:text="Delivered"
        android:id="@+id/chat_seen_status"
        android:visibility="gone"
        android:textSize="15sp"
        android:paddingStart="6dp"
        android:layout_toRightOf="@id/messages_profile_holder"/>

</RelativeLayout>